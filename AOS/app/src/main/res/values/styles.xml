<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KakaoRegular">
        <item name="android:fontFamily">@font/kakao_regular</item>
    </style>

    <style name="KakaoBold" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/kakao_bold</item>
        <item name="android:textColor">@color/grey_03</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="KakaoOtfRegular">
        <item name="android:fontFamily">@font/kakao_otf_regular</item>
    </style>

    <style name="KakaoOtfBold">
        <item name="android:fontFamily">@font/kakao_otf_bold</item>
    </style>

    <style name="NexonGothicLight">
        <item name="android:fontFamily">@font/nexon_gothic_light</item>
    </style>

    <style name="NexonGothicMedium">
        <item name="android:fontFamily">@font/nexon_gothic_medium</item>
    </style>

    <style name="NexonGothicBold" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nexon_gothic_bold</item>
    </style>

    <!--  Dialog Size  -->
    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <!--  Community Custom Dialog  -->
    <style name="CommunityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/kakao_otf_regular</item>
        <item name="android:windowBackground">@drawable/community_dialog</item>
    </style>

    <!--  MaterialButton Style  -->
    <style name="MaterialButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/drawing_dialog_button_fill</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  MaterialButton Style  -->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/kakao_otf_bold</item>
    </style>
</resources>