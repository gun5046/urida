<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickListener"
            type="com.edu.mf.view.study.learn.LearnAdapter.CategoryClickListener" />
        <variable
            name="data"
            type="String" />
        <variable
            name="flag"
            type="Integer" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/learn_list_light_gray_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_item_learn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{data}"
        android:textSize="26sp"
        android:fontFamily="@font/jalnan_language"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_item_learn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{flag==1?`학습하기`:`문제풀기`}"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/learn_list_light_green_10"
        android:fontFamily="@font/baemin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>