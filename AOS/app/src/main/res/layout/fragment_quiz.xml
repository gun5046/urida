<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textview_fragment_quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낱말 퀴즈"
            android:textSize="24sp"
            android:fontFamily="@font/kakao_otf_bold"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/textview_fragment_quiz_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="네가지 유형의 퀴즈들을 풀어보세요!\n틀렸다고 걱정하지 마세요!\n틀린 문제들은 다시풀어보기로 이동해요!"
            android:textSize="16sp"
            android:fontFamily="@font/kakao_bold"
            android:breakStrategy="high_quality"
            app:layout_constraintTop_toBottomOf="@id/textview_fragment_quiz_title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <FrameLayout
            android:id="@+id/framelayout_container_quiz"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="#bad7f2"
            app:layout_constraintTop_toBottomOf="@id/textview_fragment_quiz_subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>