<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_draw_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_palette"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_pen_palette"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/imageview_pen_red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_pen_red"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toRightOf="@+id/imageview_palette"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_pen_yellow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_pen_yellow"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pen_red"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_pen_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pen_green"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pen_yellow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_pen_blue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pen_blue"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pen_green"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_pen_black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pen_black"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pen_blue"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:src="@drawable/ic_eraser"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageview_pen_black"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pen_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_draw_tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageview_pen_width_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/drawing_pen_shape"
                android:background="@drawable/drawing_pen_shape_pressed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imageview_pen_width_2"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/imageview_pen_width_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/drawing_pen_shape"
                android:background="@drawable/drawing_pen_shape_pressed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageview_pen_width_1"
                app:layout_constraintRight_toLeftOf="@+id/imageview_pen_width_3"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/imageview_pen_width_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/drawing_pen_shape"
                android:background="@drawable/drawing_pen_shape_pressed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageview_pen_width_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_draw_tools"
        app:layout_constraintBottom_toTopOf="@+id/constraintlayout_bottomBtn"
        app:layout_constraintVertical_bias="1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_bottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_canvas"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageview_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/button_drawing_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_drawing_button_drawing_result"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>