<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.picture.PicturePreviewFragment" >

    <com.edu.mf.view.picture.CameraSourcePreview
        android:id="@+id/camera_source_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.edu.mf.view.picture.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/camera_source_preview"
        app:layout_constraintBottom_toBottomOf="@id/camera_source_preview"
        app:layout_constraintLeft_toLeftOf="@id/camera_source_preview"
        app:layout_constraintRight_toRightOf="@id/camera_source_preview"/>
</androidx.constraintlayout.widget.ConstraintLayout>