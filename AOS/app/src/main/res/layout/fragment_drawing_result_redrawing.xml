<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_fragment_drawing_result_redrawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sorry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_fragment_drawing_result_redrawing"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_fragment_drawing_result_redrawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 그리기"
        android:background="@drawable/drawing_button_result"
        android:backgroundTint="@color/primary_teal_100"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_drawing_result_redrawing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>