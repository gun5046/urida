<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/background_light_green"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintTop_toBottomOf="@+id/imageview_settings"
        app:layout_constraintBottom_toTopOf="@+id/constraintlayout_transfer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/textview_another_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_main_cardview_community_another_friends"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/jalnan_language"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textview_go_community"/>

            <TextView
                android:id="@+id/textview_go_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_main_cardview_community_transfer_community"
                android:textSize="22sp"
                android:fontFamily="@font/jalnan_language"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textview_another_friends"
                app:layout_constraintRight_toLeftOf="@+id/imageview_chevron"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/imageview_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="î€€"
                android:textStyle="bold"
                android:textSize="28sp"
                android:fontFamily="@font/jalnan"
                app:layout_constraintTop_toBottomOf="@+id/textview_another_friends"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview_community"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_study_drawing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardview_picture"
            app:layout_constraintDimensionRatio="H, 2:1"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_study"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background_yellow"
                app:cardCornerRadius="30dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cardview_drawing"
                app:layout_constraintHorizontal_bias="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textview_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_cardview_study_transfer_study"
                        android:fontFamily="@font/jalnan_language"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_study_main"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_drawing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primary_blue"
                app:cardCornerRadius="30dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toRightOf="@+id/cardview_study"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textview_drawing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_cardview_drawing_transfer_drawing"
                        android:fontFamily="@font/jalnan_language"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drawing_main"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/primary_purple"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@+id/constraintlayout_study_drawing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintDimensionRatio="H, 1:0.8"
            app:layout_constraintVertical_bias="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textview_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_cardview_picture_transfer_picture"
                    android:fontFamily="@font/jalnan_language"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_picture_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>