<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_dialog_select"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/learn_list_black_10">

    <TextView
        android:id="@+id/textview_item_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="그림보고 낱말 맞추기"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/kakao_otf_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textivew_item_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제시된 그림을 낱말을 맞춰보세요"
        android:gravity="center"
        android:fontFamily="@font/kakao_otf_bold"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview_item_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>